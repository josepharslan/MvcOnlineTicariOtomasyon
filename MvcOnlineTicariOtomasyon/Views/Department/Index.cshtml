@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered mt-3">
    <tr>
        <th>Departman Adı</th>
        <th>Detaylar</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DepartmentName</td>
            <td><a href="/Department/Details/@item.DepartmentId" class="btn btn-secondary">Detaylar</a></td>
            <td><a href="/Department/Update/@item.DepartmentId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Department/Delete/@item.DepartmentId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Department/Create/" class="btn btn-primary">Yeni Ürün</a>
