@model MvcOnlineTicariOtomasyon.Models.Classes.Department

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Güncelleme</h2>
<br />
@using (Html.BeginForm("Update", "Department", FormMethod.Post))
{
    @Html.HiddenFor(x => x.DepartmentId)
    <div class="mb-3">
        @Html.Label("Departman Adı")
        @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
    </div>
    <button class="btn btn-info">Ekle</button>
}


