@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<CargoDetail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Kargolar</h2>
@using (Html.BeginForm("Index", "Cargo", FormMethod.Get))

{
    <div class="row-cols-lg-auto">
        Kargo Takip Numarası:
        @Html.TextBox("p")
        <input type="submit" value="Ara" class="btn btn-outline-primary" />
    </div>
}
<table class="table table-bordered table-striped mt-3">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Takip Kodu</th>
        <th>Tarih</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Employee</td>
            <td>@item.Receiver</td>
            <td>@item.TrackNumber</td>
            <td>@item.CargoDate.ToString("yyyy-MM-dd hh:mm tt")</td>
            <td><a href="/Cargo/CargoDetail/@item.TrackNumber" class="btn btn-secondary">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Cargo/Create" class="btn btn-primary">Yeni Kargo Ekle</a>