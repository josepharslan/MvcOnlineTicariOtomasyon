@using MvcOnlineTicariOtomasyon.Models.Classes
@using PagedList.Mvc
@using PagedList
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered mt-3">
    <tr>
        <th>Kategori Adı</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryName</td>
            <td><a class="btn btn-warning" href="/Category/EditCategory/@item.CategoryId">Güncelle</a></td>
            <td><a class="btn btn-danger" href="/Category/DeleteCategory/@item.CategoryId">Sil</a></td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori</a>
