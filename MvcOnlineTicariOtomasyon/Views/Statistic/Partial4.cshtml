@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Classes.ClassGroup3>
@{ int count = 0;}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.Brand</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar @item.ColorClass" style="width: @item.CountNumber%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger">@item.CountNumber</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>