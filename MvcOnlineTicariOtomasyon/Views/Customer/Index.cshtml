@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-striped mt-3">
    <tr>
        <th>Müşteri ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Detaylar</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CustomerId</td>
            <td>@item.CustomerName</td>
            <td>@item.CustomerSurname</td>
            <td>@item.CustomerCity</td>
            <td>@item.CustomerEmail</td>
            <td><a href="/Customer/CustomerPurchases/@item.CustomerId" class="btn btn-secondary">Detaylar</a></td>
            <td><a href="/Customer/Update/@item.CustomerId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Customer/Delete/@item.CustomerId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Customer/Create" class="btn btn-primary">Yeni Müşteri Ekle</a>



